package edu.mondragon.mgep.tdd.weblogin.model;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.util.Properties;

public class UserDAOFactory {

	private static Properties props = new Properties();
	
	public static UserDAO getUserDAO(){
		try {
			   Class daoClass = Class.forName( getClass("UserDAO") ); 
			   return (UserDAO) daoClass.newInstance();   
			  }
			  catch (ClassNotFoundException e) { 
			   e.printStackTrace();
			   return null;
			  }
			  catch (Exception e) {
			   e.printStackTrace();
			   return null;   
			  }
	}
	
	private static String getClass( String propertyName ) {
		  String className = null;
		  try {
		    FileInputStream file = new FileInputStream( "config.properties");
		    props.load( file );    
		   	className = props.getProperty( propertyName, "");
		   if ( className.length() == 0)
		    return null;
		  }
		  catch ( FileNotFoundException e) { 
		   e.printStackTrace();
		  }
		  catch ( IOException e) {   
		   e.printStackTrace();
		  }
		  catch (Exception e) {
		   e.printStackTrace();
		  }
		  return className;
		 }
}
